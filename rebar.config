{ erl_opts, [
    {parse_transform, lager_transform},
    debug_info,
    warn_missing_spec]}.

{ deps, [
    {lager, "3.6.8"},
    {exometer_core, {git,"https://github.com/esl/exometer_core.git", {ref, "de97a4586"}}},
    {exometer_report_graphite, {git, "https://github.com/esl/exometer_report_graphite.git", {ref, "264dd7bc"}}}
]}.

{ profiles, [
    {test, [
        {deps, [
            {meck, "0.9.2"},
            {proper, "1.3.0"}
        ]}
    ]},
    {demo, [
        {erl_opts, [debug_info, {src_dirs, ["src", "scenarios"]}]},
        {relx, [
            {release, {amoc, "2.2.1-OTP18"}, [amoc, runtime_tools]},
            {debug_info, keep},
            {include_src, true},
            {include_erts, true},
            {dev_mode, false},
            {extended_start_script, true},
            {sys_config, "rel/app.config"}
        ]}]}
]}.

{ xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions]}.
